{{> header
    title="Usuarios registrados"
}}


<section class="usuario-table">
    <div class="container mt-4">
        <div class="row d-flex justify-content-center gap-3 p-4">
            <table class="table">

                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Apellido Paterno</th>
                        <th scope="col">Email</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each usuarios}}
                    <tr>
                        <th scope="row">{{ @index}}</th>
                        <td>{{this.nombre}}</td>
                        <td>{{this.apellido_paterno}}</td>
                        <td>{{this.email}}</td>
                    </tr>

                    {{/each}}
                </tbody>

            </table>
        </div>
    </div>
</section>"